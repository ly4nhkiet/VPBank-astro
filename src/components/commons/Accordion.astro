---
import Astro from 'astro';
const { data } = Astro.props;
---

<div class="accordions">
    {data.map((item) => (
        <div class="accordion">
            <div class="accordion__header">
                <div class="accordion__title">
                    {item.icon && <div class="accordion__avatar"><img src={`/images/${item.icon}`} alt=""></div>}
                    {item.title}
                </div>
                <div class="accordion__icon">
                    <i class="iconsax add" icon-name="add-circle"></i>
                    <i class="iconsax minus" icon-name="minus-circle"></i>
                </div>
            </div>
            <div class="accordion__body">
                <div class="accordion__content" set:html={item.content}>
                </div>
            </div>
        </div>
      ))}
</div>
 